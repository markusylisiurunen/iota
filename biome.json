{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "files": {
    "includes": [
      ".github/**/*.yml",
      "src/**/*.ts",
      "src/**/*.js",
      "*.json",
      "*.md",
      "*.ts",
      "!**/node_modules/**/*",
      "!dist/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "useNodejsImportProtocol": "off"
      },
      "correctness": {
        "noUnusedVariables": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
