{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2024"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    "resolveJsonModule": true,
    "types": ["node"],

    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
